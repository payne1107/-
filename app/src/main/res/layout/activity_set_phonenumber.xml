<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_e"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/sys_title" />
    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <EditText
            android:inputType="number"
            android:id="@+id/et_verify_code"
            android:textColorHint="@color/text_color_9"
            android:background="@null"
            android:layout_marginLeft="24px"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_32"
            android:hint="请输入手机号"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_marginRight="@dimen/margin_size_15"
            android:gravity="right|center"
            android:textSize="@dimen/text_size_28"
            android:textColor="@color/color_62d"
            android:text="获取验证码?"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:layout_marginLeft="@dimen/margin_size_15"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_size_32"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:textColorHint="@color/text_color_9"
            android:background="@null"
            android:layout_marginLeft="24px"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_32"
            android:hint="请输入手机收到的验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_confirm"
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:background="@drawable/confirm_button_style"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_size_70"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:showIn="@layout/activity_update_nick_name">

        <TextView
            android:text="确定更换"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>