<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e"
    android:orientation="vertical">

    <include layout="@layout/sys_title" />


    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:textSize="@dimen/text_size_26"
            android:textColorHint="@color/text_color_9"
            android:textColor="@color/text_color_3"
            android:paddingLeft="@dimen/margin_size_15"
            android:hint="请输入昵称"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/margin_size_20"
        android:text="设置后，其他人将看到你的昵称"
        android:textSize="@dimen/text_size_26"
        android:textColor="@color/text_color_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_confirm"
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:background="@drawable/confirm_button_style"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_size_70"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>