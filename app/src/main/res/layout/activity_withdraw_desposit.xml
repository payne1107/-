<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_e"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/sys_title" />
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/color_62d"
        android:layout_width="match_parent"
        android:layout_height="254px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="@dimen/margin_size_15"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_32"
                android:textColor="@color/color_e"
                android:text="当前余额"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <TextView
                android:inputType="number"
                android:id="@+id/tv_account"
                android:layout_weight="1"
                android:textSize="29sp"
                android:textColor="@color/color_e"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/margin_size_15"
            android:textSize="@dimen/text_size_32"
            android:textColor="@color/text_color_3"
            android:gravity="center"
            android:text="提现金额"
            android:layout_width="wrap_content"
            android:layout_height="110px" />
        <EditText
            android:digits="1234567890"
            android:inputType="number"
            android:id="@+id/et_money"
            android:textSize="@dimen/text_size_28"
            android:textColorHint="@color/cccccc"
            android:hint="请输入您的提现金额"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="110px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_confirm"
        android:background="@color/color_62d"
        android:gravity="center"
        android:layout_marginTop="74px"
        android:layout_gravity="center"
        android:layout_width="590px"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_36"
            android:text="确认提现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_marginTop="@dimen/margin_size_5"
        android:gravity="center"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_28"
        android:text="预计到账时间：48小时内"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</com.zhy.autolayout.AutoLinearLayout>