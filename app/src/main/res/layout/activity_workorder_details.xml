<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e"
    android:orientation="vertical">

    <include layout="@layout/sys_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/layout_week_title" />
            <android.sgz.com.widget.MyGridView
                android:id="@+id/calendar_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#46c11b"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:padding="10dp" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10"
                android:background="@color/white"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginLeft="@dimen/margin_size_15"
                    android:layout_marginTop="@dimen/margin_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="花果山别墅2#项目建设"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_30" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_e" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:text="开工日期："
                        android:textColor="@color/color_888"
                        android:textSize="@dimen/text_size_26" />

                    <TextView
                        android:id="@+id/tv_start_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018年1月1日"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/text_size_28" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:text="结束日期："
                        android:textColor="@color/color_888"
                        android:textSize="@dimen/text_size_26" />

                    <TextView
                        android:id="@+id/tv_end_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018年5月1日"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/text_size_28" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:text="工作天数："
                        android:textColor="@color/color_888"
                        android:textSize="@dimen/text_size_26" />

                    <TextView
                        android:id="@+id/tv_work_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13天"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/text_size_28" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:text="加班时长："
                        android:textColor="@color/color_888"
                        android:textSize="@dimen/text_size_26" />

                    <TextView
                        android:id="@+id/tv_add_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6小时"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/text_size_28" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_15"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:text="工单详情："
                        android:textColor="@color/color_888"
                        android:textSize="@dimen/text_size_26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在建"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/text_size_28" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginRight="@dimen/margin_size_15"
                android:layout_marginLeft="@dimen/margin_size_15"
                android:id="@+id/layout_default_worker_order"
                android:layout_marginTop="@dimen/margin_size_15"
                android:gravity="center"
                android:background="@color/color_62d"
                android:layout_width="match_parent"
                android:layout_height="100px">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_30"
                    android:text="设置为默认打卡工单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>