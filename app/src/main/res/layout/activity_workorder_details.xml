<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_e"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/sys_title" />

    <GridView
        android:id="@+id/calendar_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#46c11b"
        android:numColumns="7"
        android:padding="10dp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginBottom="@dimen/margin_size_10"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:textColor="@android:color/black"
                android:text="花果山别墅2#项目建设"
                android:textSize="@dimen/text_size_30"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:background="@color/color_e"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="@dimen/margin_size_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/margin_size_15"
                android:text="开工日期："
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/color_888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_28"
                android:text="2018年1月1日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="@dimen/margin_size_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/margin_size_15"
                android:text="结束日期："
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/color_888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_28"
                android:text="2018年5月1日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="@dimen/margin_size_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/margin_size_15"
                android:text="工作天数："
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/color_888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_28"
                android:text="13天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="@dimen/margin_size_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/margin_size_15"
                android:text="加班时长："
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/color_888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_28"
                android:text="6小时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/margin_size_15"
                android:text="工单详情："
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/color_888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_28"
                android:text="在建"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>